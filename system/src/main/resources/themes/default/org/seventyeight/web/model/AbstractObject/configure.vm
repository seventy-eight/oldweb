
<form action="$url" method="post" name="configure" enctype="application/x-www-form-urlencoded" accept-charset="UTF-8" onsubmit="Utils.addJsonElement( this );">

<table>


<tr>
    <td colspan="2" align="center" style="font-size: 18px;font-weight: bold">$header</td>
</tr>


<tr>
    <td style="width:100%" colspan="2">
        <div title="config" style="width:100%">
            <input type="hidden" name="class" value="$class" />
            <table style="width:100%">

                $subchildcontent

                #set( $title = "" )
                #set( $title = $item.getTitle() )

                #set( $description = "" )
                #set( $description = $item.getDescription() )

                <tr>
                    <td>#i18n( "Title" )</td>
                    <td>#inputtext( "title", $title )</td>
                </tr>

                <tr>
                    <td>#i18n( "Description" )</td>
                    <td>#inputtext( "description", $description )</td>
                </tr>

                <tr>
                    <td>Groups</td>
                    <td>
                        <table>
                            <tr>
                                <td align="center">#i18n( "Access groups" )</td>
                                <td align="center">#i18n( "Review groups" )</td>
                                <td align="center">#i18n( "Editor groups" )</td>
                            </tr>

                            <tr>
                                <td align="center">#groupsforresource($!item.getIdentifier(), "access-group", "readAccess")</td>
                                <td align="center">#groupsforresource($!item.getIdentifier(), "review-group", "reviewAccess")</td>
                                <td align="center">#groupsforresource($!item.getIdentifier(), "editor-group", "writeAccess")</td>
                            </tr>
                        </table>
                    </td>
                </tr>

                <tr>
                    <td colspan="2" align="center"><input type="submit" value="OK"></td>
                </tr>

            </table>
        </div>
    </td>
</tr>

    </table>
</form>