#macro( heteroRadio $item $descriptors $name )
    ITEM= $item<br>
    $descriptors

    #set( $size = $descriptors.size() + 1 )

    <tr>
        <td style="width: 100%">
            #foreach( $descriptor in $descriptors )
                <table style="border-style: solid; width: 100%" colspan="2">
                    <tr>
                        <td rowspan="$size" valign="top"><input type="radio" name="$name" value=""></td>
                        <td>$descriptor.getDisplayName()</td>
                    </tr>
                    #renderDescriptor( $descriptor $item false );
                </table>
            #end
        </td>
    </tr>
#end